{
  "version": 2,
  "builds": [
    {
      "src": "backend/server.js",
      "use": "@vercel/node"
    },
    {
      "src": "backend/api/recommend.py",
      "use": "@vercel/python"
    }
  ],
  "routes": [
    {
      "src": "/api/recommend",
      "dest": "backend/api/recommend.py"
    },
    {
      "src": "/api/(.*)",
      "dest": "backend/server.js"
    },
    {
      "src": "/uploads/(.*)",
      "dest": "backend/uploads/$1"
    },
    {
      "src": "/assets/(.*)",
      "dest": "src/assets/$1"
    },
    {
      "src": "/styles/(.*)",
      "dest": "src/styles/$1"
    },
    {
      "src": "/scripts/(.*)",
      "dest": "src/scripts/$1"
    },
    {
      "src": "/auth/(.*)",
      "dest": "src/auth/$1"
    },
    {
      "src": "/",
      "dest": "src/pages/index.html"
    },
    {
      "src": "/(.*)",
      "dest": "src/pages/$1"
    }
  ]
}