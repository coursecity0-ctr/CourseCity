{
  "version": 2,
  "builds": [
    {
      "src": "backend/server.js",
      "use": "@vercel/node"
    },
    {
      "src": "backend/api/recommend.py",
      "use": "@vercel/python"
    }
  ],
  "rewrites": [
    {
      "source": "/api/recommend",
      "destination": "backend/api/recommend.py"
    },
    {
      "source": "/api/(.*)",
      "destination": "backend/server.js"
    },
    {
      "source": "/uploads/(.*)",
      "destination": "backend/uploads/$1"
    }
  ],
  "cleanUrls": true,
  "trailingSlash": false
}